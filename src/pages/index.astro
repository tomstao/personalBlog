---
import { getCollection } from "astro:content"
import PageLayout from "@layouts/PageLayout.astro"
import ArrowCard from "@components/ArrowCard"
import StackCard from "@components/StackCard.astro"
import { SITE, SOCIALS } from "@consts"
import TwinklingStars from "@components/TwinklingStars.astro"
import MeteorShower from "@components/MeteorShower.astro"

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3)

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3)

const stack = [
  {
    text: "Astro",
    icon: "astro",
    href: "https://astro.build",
  },
  {
    text: "Javascript",
    icon: "javascript",
    href: "https://www.javascript.com",
  },
  {
    text: "Typescript",
    icon: "typescript",
    href: "https://www.typescriptlang.org",
  },
  {
    text: "Tailwind",
    icon: "tailwind",
    href: "https://tailwindcss.com",
  },
]
---

<PageLayout title="Home" description={SITE.DESCRIPTION}>
  <!-- Light Mode: Particles -->
  <div class="absolute inset-0 block dark:hidden">
    <div id="particles1" class="fixed inset-0"></div>
    <div id="particles2" class="fixed inset-0"></div>
    <div id="particles3" class="fixed inset-0"></div>
  </div>

  <!-- Dark Theme: Stars -->
  <div class="absolute inset-0 hidden overflow-hidden bg-black dark:block">
    <div id="stars-container1" class="fixed left-0 top-0 h-screen w-[200vw]">
      <div id="stars1" class="absolute inset-0 h-full w-full"></div>
    </div>
    <div id="stars-container2" class="fixed left-0 top-0 h-screen w-[200vw]">
      <div id="stars2" class="absolute inset-0 h-full w-full"></div>
    </div>
    <div id="stars-container3" class="fixed left-0 top-0 h-screen w-[200vw]">
      <div id="stars3" class="absolute inset-0 h-full w-full"></div>
    </div>
  </div>

  <!-- Dark Theme: Twinkling Stars / Metors -->
  <div id="galaxy" class="fixed inset-0">
    <div class="hidden dark:block">
      <TwinklingStars />
      <MeteorShower />
    </div>
  </div>

  <script is:inline src="/js/bg.js"></script>

  <!-- HERO -->
  <section class="relative h-screen w-full">
    <div id="planetcont" class="animate absolute inset-0 top-1/4 overflow-hidden">
      <div
        id="crescent"
        class="absolute left-1/2 top-0 aspect-square min-h-[100vh] w-[250vw] -translate-x-1/2 rounded-full bg-gradient-to-b from-black/25 from-0% to-transparent to-5% p-[1px] dark:from-white/75"
      >
        <div
          id="planet"
          class="flex h-full w-full justify-center overflow-hidden rounded-full bg-white p-[1px] dark:bg-black"
        >
          <div
            id="blur"
            class="h-20 w-full rounded-full bg-neutral-900/25 blur-3xl dark:bg-white/25"
          >
          </div>
        </div>
      </div>
    </div>
    <div class="animate absolute flex h-full w-full items-center justify-center">
      <div class="relative flex h-full w-full items-center justify-center">
        <div class="p-5 text-center">
          <p class="animated text-lg font-semibold opacity-75 md:text-xl lg:text-2xl">
            Hello, I am ...
          </p>
          <p
            class="animated animate-gradient bg-clip-text text-2xl font-bold uppercase text-transparent md:text-3xl lg:text-4xl"
            style="background-image: linear-gradient(to right, #000000 0%, #ffffff 25%, #000000 50%, #ffffff 75%, #000000 100%); background-size: 200% auto;"
          >
            Tao Su
          </p>
          <style>
            .dark .animated.animate-gradient {
              background-image: linear-gradient(
                to right,
                #ffffff 0%,
                #1a1a1a 25%,
                #ffffff 50%,
                #1a1a1a 75%,
                #ffffff 100%
              ) !important;
            }
          </style>
          <p class="animated text-sm opacity-75 md:text-base lg:text-lg">
            Currently studying computer science.
          </p>
          <div id="ctaButtons" class="animated mt-5 flex flex-wrap justify-center gap-4">
            <a
              href="/blog"
              class="blend truncate rounded bg-black px-4 py-2 text-xs text-white transition-all duration-300 hover:scale-105 hover:opacity-75 hover:shadow-[0_0_25px_rgba(0,0,0,0.3)] dark:bg-white dark:text-black dark:hover:shadow-[0_0_25px_rgba(255,255,255,0.3)] md:text-sm lg:text-base"
            >
              Read my blog
            </a>
            <a
              href="/work"
              class="blend truncate rounded border border-black/25 px-4 py-2 text-xs transition-all duration-300 hover:scale-105 hover:bg-black/5 hover:shadow-[0_0_20px_rgba(0,0,0,0.2)] dark:border-white/25 hover:dark:bg-white/15 dark:hover:shadow-[0_0_20px_rgba(255,255,255,0.2)] md:text-sm lg:text-base"
            >
              View my work
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="relative bg-white dark:bg-black">
    <div class="mx-auto max-w-screen-sm space-y-24 p-5 pb-16">
      <!-- About Section -->
      <section class="animate">
        <article>
          <p>
            I am a <b><i>an aspiring Full-Stack Web Developer</i></b>, <b
              ><i> and passionate Computer Science student</i></b
            >, <b><i>minimalist</i></b>, <b
              ><i
                >based in New York,currently studying at LaGuardia Community College, where I'm
                building a strong foundation in software engineering and modern web technologies</i
              ></b
            >.
          </p>
          <p>
            I love to both build and break things. I am motivated by challenging projects with
            self-guided research and dynamic problem solving. My true passion is crafting creative
            front end designs with unique takes on color, typography and motion.
          </p>
          <p>So far,</p>
          <p>
            I've built some simple projects ranging from static sites and e-commerce mockups to
            backend APIs and interactive web appsâ€”always with a focus on performance, clarity, and
            user-centered design.
          </p>
          <p>Now</p>
          <p>
            I'm seeking opportunities to grow as a developer, contribute to real-world products, and
            bring ideas to life through technology.
          </p>
        </article>
      </section>

      <!-- Blog Preview Section -->
      <section class="animate">
        <div class="space-y-4">
          <div class="flex justify-between">
            <p class="font-semibold text-black dark:text-white">Recent posts</p>
            <a
              href="/blog"
              class="blend group col-span-3 flex w-fit items-center gap-1 text-black underline decoration-black/25 decoration-[.5px] underline-offset-2 hover:decoration-black dark:text-white dark:decoration-white/50 dark:hover:decoration-white"
            >
              <span
                class="blend text-black/75 group-hover:text-black dark:text-white/75 group-hover:dark:text-white"
              >
                All posts
              </span>
            </a>
          </div>
          <ul class="space-y-4">
            {
              posts.map((post) => (
                <li>
                  <ArrowCard entry={post} />
                </li>
              ))
            }
          </ul>
        </div>
      </section>

      <!-- Tech Stack Section -->
      <section class="animate">
        <div class="space-y-4">
          <p class="font-semibold text-black dark:text-white">Website build with</p>
          <div class="mt-5 flex flex-wrap items-center gap-2">
            {stack.map((item) => <StackCard text={item.text} icon={item.icon} href={item.href} />)}
          </div>
          <div>
            Performing reactivity and statefulness, special guest
            <a
              href="https://www.solidjs.com/"
              target="_blank"
              class="blend group w-fit text-black underline decoration-black/25 decoration-[.5px] underline-offset-2 hover:decoration-black dark:text-white dark:decoration-white/50 dark:hover:decoration-white"
            >
              <span
                class="blend text-black/75 group-hover:text-black dark:text-white/75 group-hover:dark:text-white"
              >
                SolidJS
              </span>
            </a>
          </div>
        </div>
      </section>

      <!-- Project Preview Section -->
      <section class="animate">
        <div class="space-y-4">
          <div class="flex justify-between">
            <p class="font-semibold text-black dark:text-white">Recent projects</p>
            <a
              href="/projects"
              class="blend group col-span-3 flex w-fit items-center gap-1 text-black underline decoration-black/25 decoration-[.5px] underline-offset-2 hover:decoration-black dark:text-white dark:decoration-white/50 dark:hover:decoration-white"
            >
              <span
                class="blend text-black/75 group-hover:text-black dark:text-white/75 group-hover:dark:text-white"
              >
                All projects
              </span>
            </a>
          </div>
          <ul class="space-y-4">
            {
              projects.map((project) => (
                <li>
                  <ArrowCard entry={project} />
                </li>
              ))
            }
          </ul>
        </div>
      </section>

      <!-- Contact Section -->
      <section class="animate">
        <div>
          <p class="font-semibold text-black dark:text-white">Let's Connect</p>
          <p>Reach out to me via email or on social media.</p>
          <div class="mt-4 grid auto-cols-min grid-cols-4 gap-y-2">
            {
              SOCIALS.map((social) => (
                <>
                  <div class="col-span-1 flex items-center gap-1">
                    <span class="truncate whitespace-nowrap">{social.NAME}</span>
                  </div>
                  <div class="col-span-3 truncate">
                    <a
                      href={social.HREF}
                      {...(social.HREF.startsWith("mailto:") ? {} : { target: "_blank" })}
                      class="blend group col-span-3 flex w-fit items-center gap-1 text-black underline decoration-black/25 decoration-[.5px] underline-offset-2 hover:decoration-black dark:text-white dark:decoration-white/50 dark:hover:decoration-white"
                    >
                      <span class="blend text-black/75 group-hover:text-black dark:text-white/75 group-hover:dark:text-white">
                        {social.TEXT}
                      </span>
                    </a>
                  </div>
                </>
              ))
            }
          </div>
        </div>
      </section>
    </div>
  </div>
</PageLayout>
