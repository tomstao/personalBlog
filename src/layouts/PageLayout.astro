---
import "@styles/global.css"
import BaseHead from "@components/BaseHead.astro"
import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"
import Drawer from "@components/Drawer.astro"
import BackToTop from "@components/BackToTop.astro"
import ReadingProgress from "@components/ReadingProgress.astro"
import SearchWrapper from "@components/SearchWrapper"
import { SITE } from "@consts"
import { getCollection } from "astro:content"

interface Props {
  title: string
  description: string
  article?: {
    publishedTime: Date
    modifiedTime?: Date
    tags?: string[]
  }
}

const { title, description, article } = Astro.props

// Get data for search modal
const posts = (await getCollection("blog")).filter((post) => !post.data.draft)
const projects = (await getCollection("projects")).filter((project) => !project.data.draft)
const searchData = [...posts, ...projects]
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} article={article} />
  </head>
  <body>
    <a
      href="#main-content"
      class="skip-to-content sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-[100] focus:flex focus:items-center focus:gap-2 focus:rounded-lg focus:bg-black focus:px-4 focus:py-2.5 focus:text-white focus:shadow-lg focus:outline-none focus:ring-2 focus:ring-white/50 dark:focus:bg-white dark:focus:text-black dark:focus:ring-black/50"
    >
      <span>Skip to content</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
    {article && <ReadingProgress />}
    <Header transition:persist />
    <Drawer transition:persist />
    <main id="main-content">
      <slot />
    </main>
    <Footer transition:persist />
    <BackToTop transition:persist />
    <SearchWrapper client:idle data={searchData} transition:persist />
  </body>
</html>
