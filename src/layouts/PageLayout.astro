---
import "@styles/global.css"
import BaseHead from "@components/BaseHead.astro"
import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"
import Drawer from "@components/Drawer.astro"
import ReadingProgress from "@components/ReadingProgress.astro"
import { SITE } from "@consts"

interface Props {
  title: string
  description: string
  article?: {
    publishedTime: Date
    modifiedTime?: Date
    tags?: string[]
  }
}

const { title, description, article } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} article={article} />
  </head>
  <body>
    {article && <ReadingProgress />}
    <Header />
    <Drawer />
    <main>
      <slot />
    </main>
    <Footer />
    <script>
      function initSearchShortcut() {
        document.addEventListener("keydown", (e: KeyboardEvent) => {
          // Skip if user is typing in an input/textarea
          const target = e.target as HTMLElement
          if (
            target.tagName === "INPUT" ||
            target.tagName === "TEXTAREA" ||
            target.isContentEditable
          ) {
            return
          }

          // Check for "/" or Cmd/Ctrl+K
          const isSlash = e.key === "/"
          const isCmdK = (e.metaKey || e.ctrlKey) && e.key === "k"

          if (isSlash || isCmdK) {
            e.preventDefault()

            if (window.location.pathname === "/search" || window.location.pathname === "/search/") {
              // Already on search page, focus the input
              const searchInput = document.querySelector('input[name="search"]') as HTMLInputElement
              searchInput?.focus()
            } else {
              // Navigate to search page
              window.location.href = "/search"
            }
          }
        })
      }

      document.addEventListener("astro:after-swap", initSearchShortcut)
      initSearchShortcut()
    </script>
  </body>
</html>
