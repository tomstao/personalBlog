---
import type { MarkdownHeading } from "astro"

interface Props {
  headings: MarkdownHeading[]
}

const { headings } = Astro.props

// Filter to only h2 and h3 headings
const toc = headings.filter((h) => h.depth >= 2 && h.depth <= 3)
---

{
  toc.length > 0 && (
    <nav class="toc mb-8 rounded-lg border border-black/10 bg-black/5 p-4 dark:border-white/20 dark:bg-white/5">
      <div class="mb-3 text-sm font-semibold uppercase text-black dark:text-white">
        Table of Contents
      </div>
      <ul class="flex flex-col gap-2">
        {toc.map((heading) => (
          <li
            class:list={[
              "transition-colors duration-200",
              heading.depth === 2
                ? "font-medium text-black/80 dark:text-white/80"
                : "ml-4 text-sm text-black/60 dark:text-white/60",
            ]}
          >
            <a
              href={`#${heading.slug}`}
              class="hover:text-black hover:underline dark:hover:text-white"
            >
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}
