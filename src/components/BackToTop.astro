<button
  id="back-to-top"
  aria-label="Back to top of page"
  class="group pointer-events-none fixed bottom-6 left-1/2 z-50 flex -translate-x-1/2 translate-y-4 items-center gap-2 rounded-full border border-black/15 bg-white/80 px-4 py-2 text-sm font-medium opacity-0 shadow-lg outline-none backdrop-blur-sm transition-all duration-300 ease-in-out hover:bg-black/5 focus-visible:ring-2 focus-visible:ring-black/50 dark:border-white/20 dark:bg-black/80 hover:dark:bg-white/10 dark:focus-visible:ring-white/50"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="16"
    height="16"
    viewBox="0 0 24 24"
    fill="none"
    stroke-width="2.5"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="stroke-current group-hover:stroke-black group-hover:dark:stroke-white"
  >
    <polyline points="18 15 12 9 6 15"></polyline>
